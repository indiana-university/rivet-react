{
  "name": "rivet-react",
  "version": "0.8.0",
  "description": "Rivet React components",
  "author": "",
  "license": "BSD-3-Clause",
  "homepage": "http://indiana-university.github.io/rivet-react",
  "repository": "https://github.com/indiana-university/rivet-react",
  "keywords": [
    "react-component"
  ],
  "main": "build/dist/components/index.js",
  "scripts": {
    "start": "npx styleguidist server",
    "build": "rm -rf ./build && react-scripts build",
    "license": "license-check-and-add",
    "publish-guide": "npx styleguidist build && cp -r .circleci styleguide && gh-pages --dist styleguide --dotfiles",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "lint": "env EXTEND_ESLINT=true eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "classnames": "2.2.6",
    "react": "16.12.0",
    "react-display-name": "0.2.5",
    "react-dom": "16.12.0",
    "react-scripts": "3.3.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "4.2.4",
    "@testing-library/react": "9.4.0",
    "@testing-library/user-event": "8.0.2",
    "acorn": "^7.1.0",
    "codecov.io": "0.1.6",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.2",
    "gh-pages": "2.1.1",
    "license-check-and-add": "3.0.3",
    "react-styleguidist": "10.3.2",
    "rivet-collapsible": "0.2.11",
    "rivet-switch": "0.3.2",
    "rivet-uits": "1.7.2",
    "semantic-release": "15.14.0"
  },
  "files": [
    "build/dist/components",
    "addons"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/components/**/*.{js}",
      "!src/components/**/index.{js}"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "license-check-and-add-config": {
    "folder": ".",
    "license": "license-header.txt",
    "exact_paths_method": "INCLUDE",
    "exact_paths": [
      "addons",
      "src",
      "styleguide.config.js"
    ],
    "file_type_method": "INCLUDE",
    "file_types": [
      ".js"
    ],
    "insert_license": true
  }
}
